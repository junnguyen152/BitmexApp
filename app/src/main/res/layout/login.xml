<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colordark">


    <android.support.constraint.Guideline
        app:layout_constraintGuide_percent="0.1"
        android:id="@+id/top_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <android.support.constraint.Guideline
        app:layout_constraintGuide_percent="0.9"
        android:id="@+id/bottom_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <android.support.constraint.Guideline
        app:layout_constraintGuide_percent="0.1"
        android:id="@+id/left_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <android.support.constraint.Guideline
        app:layout_constraintGuide_percent="0.9"
        android:id="@+id/right_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_layout"
        app:layout_constraintBottom_toTopOf="@id/bottom_layout"
        app:layout_constraintLeft_toRightOf="@id/left_layout"
        app:layout_constraintRight_toLeftOf="@id/right_layout">

        <android.support.constraint.Guideline
            app:layout_constraintGuide_percent="0.08"
            android:id="@+id/top_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
        <android.support.constraint.Guideline
            app:layout_constraintGuide_percent="0.28"
            android:id="@+id/bottom_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
        <android.support.constraint.Guideline
            app:layout_constraintGuide_percent="0.3"
            android:id="@+id/left_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
        <android.support.constraint.Guideline
            app:layout_constraintGuide_percent="0.7"
            android:id="@+id/right_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <android.support.constraint.Guideline
            app:layout_constraintGuide_percent="0.3"
            android:id="@+id/top_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
        <android.support.constraint.Guideline
            app:layout_constraintGuide_percent="0.4"
            android:id="@+id/bottom_appname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

        <android.support.constraint.Guideline
            app:layout_constraintGuide_percent="0.25"
            android:id="@+id/left_layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
        <android.support.constraint.Guideline
            app:layout_constraintGuide_percent="0.75"
            android:id="@+id/right_layout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
        <android.support.constraint.Guideline
            app:layout_constraintGuide_percent="0.68"
            android:id="@+id/top_btnlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

        <android.support.constraint.Guideline
            app:layout_constraintGuide_percent="0.75"
            android:id="@+id/bottom_btnlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

        <android.support.constraint.Guideline
            app:layout_constraintGuide_percent="0.42"
            android:id="@+id/top_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
        <android.support.constraint.Guideline
            app:layout_constraintGuide_percent="0.52"
            android:id="@+id/bottom_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
        <android.support.constraint.Guideline
            app:layout_constraintGuide_percent="0.52"
            android:id="@+id/top_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
        <android.support.constraint.Guideline
            app:layout_constraintGuide_percent="0.62"
            android:id="@+id/bottom_pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>
        <android.support.constraint.Guideline
            app:layout_constraintGuide_percent="0.85"
            android:id="@+id/quenmatkhau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"/>

        <android.support.constraint.Guideline
            app:layout_constraintGuide_percent="0.1"
            android:id="@+id/left_btnlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
        <android.support.constraint.Guideline
            app:layout_constraintGuide_percent="0.45"
            android:id="@+id/right_btnlogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
        <android.support.constraint.Guideline
            app:layout_constraintGuide_percent="0.55"
            android:id="@+id/left_btndangky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>
        <android.support.constraint.Guideline
            app:layout_constraintGuide_percent="0.9"
            android:id="@+id/right_btndangky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/top_logo"
            app:layout_constraintBottom_toTopOf="@id/bottom_logo"
            app:layout_constraintLeft_toRightOf="@id/left_logo"
            app:layout_constraintRight_toLeftOf="@id/right_logo"
            android:background="@drawable/binance"/>

        <TextView
            android:text="BITMEX"
            android:textStyle="bold"
            android:textColor="#f5bc00"
            android:textSize="40dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/top_appname"
            app:layout_constraintBottom_toTopOf="@id/bottom_appname"
            app:layout_constraintLeft_toRightOf="@id/left_layout1"
            app:layout_constraintRight_toLeftOf="@id/right_layout1"/>

        <TextView
            android:id="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@id/top_id"
            app:layout_constraintBottom_toTopOf="@id/bottom_id"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/left_layout1"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:text="Tài khoản"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edtUsername"
            app:layout_constraintTop_toBottomOf="@id/top_id"
            app:layout_constraintBottom_toTopOf="@id/bottom_id"
            app:layout_constraintLeft_toRightOf="@id/left_layout1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="16sp"
            android:textColor="#ffffff"/>
        <TextView
            android:id="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@id/top_pass"
            app:layout_constraintBottom_toTopOf="@id/bottom_pass"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/left_layout1"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="Mật khẩu" />
        <EditText
            android:id="@+id/edtPassword"
            app:layout_constraintTop_toBottomOf="@id/top_pass"
            app:layout_constraintBottom_toTopOf="@id/bottom_pass"
            app:layout_constraintLeft_toRightOf="@id/left_layout1"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:inputType="textPassword"/>

        <Button
            android:text="Đăng nhập"
            android:id="@+id/btnDangNhap"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/custom_button"
            app:layout_constraintTop_toBottomOf="@id/top_btnlogin"
            app:layout_constraintBottom_toTopOf="@id/bottom_btnlogin"
            app:layout_constraintLeft_toRightOf="@id/left_btnlogin"
            app:layout_constraintRight_toLeftOf="@id/right_btnlogin"/>
        <Button
            android:text="Đăng ký"
            android:id="@+id/btnDangKyDialog"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/custom_button"
            app:layout_constraintTop_toBottomOf="@id/top_btnlogin"
            app:layout_constraintBottom_toTopOf="@id/bottom_btnlogin"
            app:layout_constraintLeft_toRightOf="@id/left_btndangky"
            app:layout_constraintRight_toLeftOf="@id/right_btndangky"/>

        <TextView
            android:text="Quên mật khẩu?"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_width="120dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/quenmatkhau"/>
    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>